{
  "env"     : {
    "node" : true,
    "es6": true,
    "mocha": true
  },
  "globals" : {
  },
  "rules": {
    "semi" : [2, "always"],
    "no-undef": 2,
    "quotes": [2, "single"],
    "eqeqeq": [2, "allow-null"],
    "indent": [2, 2, {"SwitchCase": 1, "VariableDeclarator": 2}],
    "no-trailing-spaces": 2,
    "comma-dangle": [2, "always-multiline"]
  }
}
